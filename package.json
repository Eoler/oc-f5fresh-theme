{
  "name": "oc-f5fresh-theme",
  "version": "1.2.0",
  "description": "Starter development template for building Zurb Foundation 5 themed OctoberCMS sites.",
  "author": "Danilo CuculiÄ‡ <eoler@castus.me>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=6.0 <9.0"
  },
  "main": "gulpfile.js",
  "paths": {
    "root": "./",
    "media": "./storage/media/**/",
    "assets": "assets/",
    "src": {
      "images": "images/**/",
      "styles": "scss/",
      "scripts": "es6/"
    },
    "dest": {
      "images": "images/",
      "styles": "css/",
      "scripts": "js/"
    },
    "ext": {
      "images": "*.+(jpg|jpeg|png|gif|svg)",
      "styles": "*.scss",
      "scripts": "*.js"
    },
    "include": {
      "sass": [
        "assets/vendor/foundation/scss"
      ],
      "js": [
        "node_modules"
      ]
    },
    "sourcemap": {
      "root": "../scss"
    }
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "iOS >= 9"
  ],
  "devDependencies": {
    "bower": "^1.8.4",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^5.0.0",
    "gulp-clean-css": "^3.9.4",
    "gulp-if": "^2.0.2",
    "gulp-ignore": "^2.0.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-include": "^2.3.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-rename": "^1.3.0",
    "gulp-sass": "^4.0.1",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.0",
    "js-yaml": "^3.12.0",
    "pump": "^3.0.0",
    "yargs": "^11.0.0"
  },
  "scripts": {
    "start": "gulp watch",
    "build": "gulp upbuild --production"
  }
}
