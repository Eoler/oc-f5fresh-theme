{
  "name": "oc-f5fresh-theme",
  "version": "2.0.0",
  "description": "Starter development template for building Zurb Foundation 5 themed OctoberCMS sites.",
  "author": "Danilo CuculiÄ‡ <eoler@castus.me>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=12.22 <15"
  },
  "main": "gulpfile.js",
  "paths": {
    "root": "./",
    "media": "storage/media/**/",
    "assets": "assets/",
    "src": {
      "styles": "scss/",
      "scripts": "es6/"
    },
    "dest": {
      "styles": "css/",
      "scripts": "js/"
    },
    "ext": {
      "styles": "*.scss",
      "scripts": "*.js"
    },
    "include": {
      "sass": [
        "assets/vendor/foundation/scss"
      ],
      "js": [
        "node_modules"
      ]
    },
    "sourcemap": {
      "root": "../scss"
    }
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "iOS >= 10"
  ],
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "postcss": "^8.4.14",
    "postcss-csso": "^6.0.0"
  },
  "devDependencies": {
    "bower": "^1.8.14",
    "gulp": "^3.9.1",
    "gulp-if": "^3.0.0",
    "gulp-ignore": "^3.0.0",
    "gulp-include": "^2.4.1",
    "gulp-load-plugins": "^2.0.7",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.1",
    "gulp-size": "^4.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "js-yaml": "^4.1.0",
    "pump": "^3.0.0",
    "yargs": "^17.5.1"
  },
  "scripts": {
    "start": "gulp watch",
    "build": "gulp upbuild --production"
  }
}
